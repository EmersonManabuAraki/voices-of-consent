<p id="notice"><%= notice %></p>

<h1>New Inventory Import</h1>

<p>Upload a CSV with the headers <em>location_name, inventory_type_name,</em> and <em>quantity</em> </p>

<%= form_with url: inventory_imports_path, local: true do |form| %>
  <div class="form-inputs container">
    <%= form.file_field :import_file, accept: "text/csv", required: true %>
  </div>

  <div class="form-group row mb-0" style="margin: 2rem 0">
    <div class="col-12 offset-4" style="padding-left: 0 !important;">
      <%= form.button :submit, class: "btn btn-primary" %>

      <button class="btn btn-outline-secondary">
        <%= link_to "Back", :back %>
      </button>
    </div>
  </div>
<% end %>